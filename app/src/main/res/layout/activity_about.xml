<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Petshop di Palembang"
        android:layout_centerHorizontal="true"
        android:textSize="10pt"
        android:textStyle="italic"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="1000px"
        android:layout_height="500px"
        android:src="@drawable/night"
        android:layout_below="@id/tv_judul"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Anggota:"
        android:layout_below="@id/iv_gambar"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_nama2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Matthew Vincentius"
        android:layout_below="@id/tv_nama"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_nama3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Desta Rahman Theja"
        android:layout_below="@id/tv_nama2"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_nama4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Imam Fathul Azis"
        android:layout_below="@id/tv_nama3"
        android:layout_centerInParent="true"
        />

</RelativeLayout>